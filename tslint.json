{
    "extends": ["tslint-config-airbnb", "tslint-react"],
    "rules": {
        "import-name": false,
        "ter-indent": [
            8,
            {
                "SwitchCase": 1
            }
        ],
        "trailing-comma": false,
        "brace-style": "stroustrup",
        "max-line-length": [
            true,
            200
        ],
        "ter-arrow-parens": false,
        "variable-name": {
            "options": [
                "allow-pascal-case",
                "require-const-for-all-caps",
                "ban-keywords"
            ]
        }
    }
}